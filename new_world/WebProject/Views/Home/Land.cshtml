@model IEnumerable<Land>
@{
    ViewData["Title"] = "Land Page";
    ViewData["Selected_page"] = "Land";
    int count = 1;
}

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>
}

@for (int i = 0; i < 7; i++)
{
    
    <div class="hex-row">
        @for (int j = 0; j < 23; j++)
        {
            <div class="hex">
                <a href="#" data-bs-toggle="popover" data-bs-trigger="focus" data-bs-placement="top" data-placement="top" title="Popover Header"
                 data-bs-content="X = @Model.FirstOrDefault(x => x.Id == count).X, Y = @Model.FirstOrDefault(x => x.Id == count).Y">
                    <div class="top"></div>
                    <div class="middle"></div>
                    <div class="bottom"></div>
                </a>
            </div>
            count++;
        }
    </div>
    <div class="hex-row even">
        @for (int j = 0; j < 23; j++)
        {
            <div class="hex">
                <a href="#" data-bs-toggle="popover" data-bs-trigger="focus" data-bs-placement="top" data-placement="top" title="Popover Header"
                 data-bs-content="X = @Model.FirstOrDefault(x => x.Id == count).X, Y = @Model.FirstOrDefault(x => x.Id == count).Y">
                    <div class="top"></div>
                    <div class="middle"></div>
                    <div class="bottom"></div>
                </a>
            </div>
            count++;
        }
    </div>
}
