@model WebProject.Models.ViewModels.LoginViewModel

<div class="container col-6">
    <h2 class="text-center">Login</h2>
    
    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">   
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label class="mt-4" asp-for="Email">Email</label>
            <input asp-for="Email" type="text" class="form-control" placeholder="Enter your Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>       
        <div class="form-group">
            <label class="mt-4" asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>          

        <div class="form-check form-switch mt-3">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label asp-for="RememberMe" class="form-check-label">Remember password?</label>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary mt-3"></input>
        <a class="btn btn-info" asp-action="GoogleLogin">Log In With Google</a>
    </form>
</div>